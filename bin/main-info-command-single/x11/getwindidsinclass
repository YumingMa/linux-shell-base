#!/usr/bin/env bash
# 
# Get the IDs of all windows in a class.
# 
# Arguments:
#   1. Window class (case-sensitive; can match any part of the full qualified
#      class string (class and classname; e.g. "xterm.XTerm"))
# 
# Note: IDs are printed in hexidecimal
# 

if [ $# -eq 0 ]; then
  exit
fi

WINDOW_IDS=($(wmctrl -lx | awk -v class="${1}" '$3 ~ class {print $1}'))

if [ "${#WINDOW_IDS[@]}" -gt 0 ]; then
  echo "${WINDOW_IDS[@]}"
fi
